<!DOCTYPE html>
<html>
<%- include partials/header.ejs %>
<body>
<!-- Google Tag Manager (noscript) -->
<noscript>
    <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-53BZ5VC"
            height="0" width="0" style="display:none;visibility:hidden"></iframe>
</noscript>
<!-- End Google Tag Manager (noscript) -->
<%- include partials/navbar.ejs %>
<div class="container mt-5">
    <h2 class="text-center"><%= i18n.__("KinomanHeading") %></h2>
    <div class="mb-3 mt-3">
        <form class="form-inline my-2 my-lg-0 justify-content-center">
            <a class="btn btn-outline-success my-2 my-sm-0" type="submit" href="/selection/form"><%= i18n.__("WhatToWatch") %></a>
        </form>
    </div>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <% for(var i = 0; i < 3; i++) { %>
                        <div class="col-12 col-md-6 col-lg-4 mt-2 mb-2">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="text-nowrap"
                                        style="text-overflow: ellipsis; overflow: hidden"><%= films[i].Title %></h5>
                                </div>
                                <div class="card-body">
                                    <div class="mx-auto mb-4" style="width: 100%; max-width: 150px; height: 225px">
                                        <img class="img-fluid" alt="<%= films[i].Title %>" style="object-fit: cover"
                                             src="https://image.tmdb.org/t/p/w1280/<%= films[i].PosterImg %>"/>
                                    </div>
                                    <p class="card-text"><%= i18n.__("Duration") %>
                                        <%= i18n.__("Minutes") %>: <%= films[i].Duration === 0 ? i18n.__("Undefined") : films[i].Duration %></p>
                                    <p class="card-text"><%= i18n.__("ReleaseYear") %>: <%= films[i].Year %></p>
                                    <p class="card-text"><%= i18n.__("Rating") %>
                                        IMDB: <%= films[i].ImdbRating === 0 ? i18n.__("Undefined") : films[i].ImdbRating %></p>
                                    <a href="/movie?id=<%= films[i].Id %> %>" class="btn btn-light w-100"><%= i18n.__("Detailed") %></a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <% for(var i = 3; i < 6; i++) { %>
                        <div class="col-12 col-md-6 col-lg-4 mt-2 mb-2">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="text-nowrap"
                                        style="text-overflow: ellipsis; overflow: hidden"><%= films[i].Title %></h5>
                                </div>
                                <div class="card-body">
                                    <div class="mx-auto mb-4" style="width: 100%; max-width: 150px; height: 225px">
                                        <img class="img-fluid" alt="<%= films[i].Title %>" style="object-fit: cover"
                                             src="https://image.tmdb.org/t/p/w1280/<%= films[i].PosterImg %>"/>
                                    </div>
                                    <p class="card-text"><%= i18n.__("Duration") %>
                                        <%= i18n.__("Minutes") %>: <%= films[i].Duration === 0 ? i18n.__("Undefined") : films[i].Duration %></p>
                                    <p class="card-text"><%= i18n.__("ReleaseYear") %>: <%= films[i].Year %></p>
                                    <p class="card-text"><%= i18n.__("Rating") %>
                                        IMDB: <%= films[i].ImdbRating === 0 ? i18n.__("Undefined") : films[i].ImdbRating %></p>
                                    <a href="/movie?id=<%= films[i].Id %> %>" class="btn btn-light w-100"><%= i18n.__("Detailed") %></a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
</body>
</html>
